{% extends 'base.html.twig' %}

{% block title %}Liste des trajets{% endblock %}

{% block body %}
    <h1>Liste des trajets</h1>
    <ul class="list-group">
        {% for trajet in trajets %}
            <li class="list-group-item">
                <div>
                    <a href="{{path('trajet.show', {id:trajet.id})}}">
                        <strong>{{trajet.conducteur}}</strong> 
                        {{trajet.dateDepart|date('d/m/Y')}} 
                        {{trajet.heureDepart|date('h:m:s')}}
                    </a> 
                </div>    
                {{trajet.villeDepart}} > {{trajet.villeArrivee}}
                {{trajet.nbPlacesVoiture}}
            </li>
        {% endfor %}
    </ul>
{% endblock %}
